@model eCommerce.Models.Produto

<form asp-controller="Produto" asp-action="NovoProduto">
<div class="row">
    <div>
       <BR>Nome do produto: <input asp-for="@Model.nome"/>
       <BR>Pre√ßo: <input asp-for="@Model.preco"/>
       <BR>Detalhes: <input asp-for="@Model.detalhes"/>
       <BR>Link Para Imagem: <input asp-for="@Model.imglink"/>
       <input type="hidden" asp-for="@Model.id"/>
       <BR><input type="submit" value="Salvar"/>
    </div>
</div>
</form>
@if(Model != null && Model.id !=0){
<form asp-controller="Produto" asp-action="DeletaProduto">
<div class="row">
    <div>
       <input type="hidden" asp-for="@Model.nome"/>
       <input type="hidden" asp-for="@Model.preco"/>
       <input type="hidden" asp-for="@Model.detalhes"/>
       <input type="hidden" asp-for="@Model.imglink"/>
       <input type="hidden" asp-for="@Model.id"/>
       <br><input type="submit" value="Deletar"/>
    </div>
</div>
</form>
}